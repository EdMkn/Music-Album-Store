{
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "installCommand": "npm ci",
  "functions": {
    "api/index.js": {
      "includeFiles": "api/dist/**"
    },
    "api/[...all].js": {
      "includeFiles": "api/dist/**"
    }
  },
  "rewrites": [
    { "source": "/graphql", "destination": "/api/graphql" }
  ]
} 